{
  "name": "@claudenest/agent",
  "version": "1.0.0",
  "description": "ClaudeNest Agent - Local daemon for remote orchestration of Claude Code instances",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "claudenest-agent": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "claude-code",
    "agent",
    "remote",
    "orchestration",
    "pty",
    "terminal"
  ],
  "author": "Rony Licha / QR Communication",
  "license": "PolyForm-Noncommercial-1.0.0",
  "homepage": "https://claudenest.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QrCommunication/claudenest.git",
    "directory": "packages/agent"
  },
  "bugs": {
    "url": "https://github.com/QrCommunication/claudenest/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "keytar": "^7.9.0",
    "node-pty": "^1.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.4"
  }
}
